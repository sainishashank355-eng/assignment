class max_minarray {
    public static void main(String[] args) {
        int arr[] = {3, 5, 1, 8, -2};
        int n = arr.length;

        int max = arr[0];
        int min = arr[0];

        for(int i = 1; i < n; i++) {
            if(arr[i] > max)
                max = arr[i];
            if(arr[i] < min)
                min = arr[i];
        }

        System.out.println("Max = " + max + ", Min = " + min);
    }
}
